---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { siteData } from '../data/site-data';
---

<Layout title="Contact Us" description="Get in touch with Dental Image Therapy Centres. Two convenient Winnipeg locations with extended hours.">
  <Header />
  
  <!-- Contact Hero -->
  <section class="relative py-20 bg-gradient-to-br from-primary-900 via-primary-800 to-primary-700">
    <div class="absolute inset-0 bg-black/10"></div>
    <div class="container mx-auto px-4 relative z-10">
      <div class="text-center text-white max-w-3xl mx-auto">
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-display font-normal mb-6">
          Get in Touch
        </h1>
        <p class="text-xl text-white/90">
          We're here to answer your questions and help you achieve your best smile. 
          Contact us today or visit one of our convenient locations.
        </p>
      </div>
    </div>
  </section>

  <!-- Contact Options -->
  <section class="py-16">
    <div class="container mx-auto px-4">
      <div class="grid lg:grid-cols-3 gap-8 max-w-6xl mx-auto mb-16">
        <!-- Phone -->
        <div class="bg-white rounded-xl shadow-lg p-8 text-center">
          <div class="w-16 h-16 bg-primary-900 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
          </div>
          <h3 class="text-xl font-semibold mb-4">Call Us</h3>
          <div class="space-y-2">
            <p>
              <span class="font-medium">St. Vital:</span><br>
              <a href={`tel:${siteData.locations[0].phone}`} class="text-primary-900 hover:text-primary-800 font-semibold">
                {siteData.locations[0].phone}
              </a>
            </p>
            <p>
              <span class="font-medium">Garden City:</span><br>
              <a href={`tel:${siteData.locations[1].phone}`} class="text-primary-900 hover:text-primary-800 font-semibold">
                {siteData.locations[1].phone}
              </a>
            </p>
          </div>
        </div>

        <!-- Email -->
        <div class="bg-white rounded-xl shadow-lg p-8 text-center">
          <div class="w-16 h-16 bg-accent-300 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-primary-900" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
          </div>
          <h3 class="text-xl font-semibold mb-4">Email Us</h3>
          <p class="mb-2">General Inquiries:</p>
          <a href="mailto:info@dentalimage.ca" class="text-primary-900 hover:text-primary-800 font-semibold">
            info@dentalimage.ca
          </a>
          <p class="text-sm text-gray-600 mt-4">
            We respond within 24 business hours
          </p>
        </div>

        <!-- Hours -->
        <div class="bg-white rounded-xl shadow-lg p-8 text-center">
          <div class="w-16 h-16 bg-primary-800 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <h3 class="text-xl font-semibold mb-4">Office Hours</h3>
          <div class="text-sm space-y-1">
            <p><span class="font-medium">Mon-Thu:</span> 7:00 AM - 9:00 PM</p>
            <p><span class="font-medium">Friday:</span> 7:00 AM - 2:00 PM</p>
            <p><span class="font-medium">Saturday:</span> 8:00 AM - 3:00 PM</p>
            <p><span class="font-medium">Sunday:</span> Closed</p>
          </div>
        </div>
      </div>

      <!-- Contact Form -->
      <div class="max-w-4xl mx-auto">
        <div class="bg-gradient-to-br from-accent-50 to-accent-100/30 rounded-2xl p-8 md:p-12">
          <h2 class="text-3xl font-heading font-semibold text-center text-dental-charcoal mb-8">
            Send Us a Message
          </h2>
          
          <form class="space-y-6">
            <div class="grid md:grid-cols-2 gap-6">
              <div>
                <label for="first-name" class="block text-sm font-medium text-gray-700 mb-2">
                  First Name *
                </label>
                <input 
                  type="text" 
                  id="first-name" 
                  name="first-name" 
                  required
                  class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-primary-900 focus:border-transparent"
                />
              </div>
              
              <div>
                <label for="last-name" class="block text-sm font-medium text-gray-700 mb-2">
                  Last Name *
                </label>
                <input 
                  type="text" 
                  id="last-name" 
                  name="last-name" 
                  required
                  class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-primary-900 focus:border-transparent"
                />
              </div>
            </div>

            <div class="grid md:grid-cols-2 gap-6">
              <div>
                <label for="email" class="block text-sm font-medium text-gray-700 mb-2">
                  Email *
                </label>
                <input 
                  type="email" 
                  id="email" 
                  name="email" 
                  required
                  class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-primary-900 focus:border-transparent"
                />
              </div>
              
              <div>
                <label for="phone" class="block text-sm font-medium text-gray-700 mb-2">
                  Phone Number
                </label>
                <input 
                  type="tel" 
                  id="phone" 
                  name="phone"
                  class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-primary-900 focus:border-transparent"
                />
              </div>
            </div>

            <div>
              <label for="location" class="block text-sm font-medium text-gray-700 mb-2">
                Preferred Location
              </label>
              <select 
                id="location" 
                name="location"
                class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-primary-900 focus:border-transparent"
              >
                <option value="">No preference</option>
                <option value="st-vital">St. Vital Centre</option>
                <option value="garden-city">Garden City</option>
              </select>
            </div>

            <div>
              <label for="subject" class="block text-sm font-medium text-gray-700 mb-2">
                Subject
              </label>
              <select 
                id="subject" 
                name="subject"
                class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-primary-900 focus:border-transparent"
              >
                <option value="appointment">Request Appointment</option>
                <option value="general">General Inquiry</option>
                <option value="insurance">Insurance Question</option>
                <option value="emergency">Emergency Care</option>
                <option value="new-patient">New Patient Information</option>
                <option value="other">Other</option>
              </select>
            </div>

            <div>
              <label for="message" class="block text-sm font-medium text-gray-700 mb-2">
                Message *
              </label>
              <textarea 
                id="message" 
                name="message" 
                rows="6" 
                required
                class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-primary-900 focus:border-transparent"
              ></textarea>
            </div>

            <div class="text-center">
              <button 
                type="submit" 
                class="inline-flex items-center px-8 py-3 bg-primary-900 text-white rounded-full font-medium hover:bg-primary-800 transition-colors"
              >
                Send Message
                <svg class="w-5 h-5 ml-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
                </svg>
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </section>

  <!-- Locations Section -->
  <section class="py-16 bg-gray-50">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl md:text-4xl font-heading font-semibold text-center text-dental-charcoal mb-12">
        Visit Our Locations
      </h2>
      
      <div class="grid lg:grid-cols-2 gap-8 max-w-6xl mx-auto">
        <!-- St. Vital Location -->
        <div class="bg-white rounded-xl shadow-lg overflow-hidden">
          <div class="h-64 relative">
            <img 
              src="https://images.unsplash.com/photo-1588776814546-1ffcf47267a5?w=600&h=400&fit=crop" 
              alt="St. Vital Centre location"
              class="w-full h-full object-cover"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-black/50 to-transparent"></div>
            <div class="absolute bottom-4 left-4 text-white">
              <h3 class="text-2xl font-semibold">St. Vital Centre</h3>
            </div>
          </div>
          <div class="p-6">
            <address class="not-italic text-gray-600 mb-4">
              {siteData.locations[0].address}<br />
              {siteData.locations[0].city} {siteData.locations[0].postalCode}
            </address>
            <div class="flex gap-4">
              <a 
                href={`tel:${siteData.locations[0].phone}`} 
                class="flex-1 text-center py-2 bg-primary-900 text-white rounded-lg hover:bg-primary-800 transition-colors"
              >
                Call
              </a>
              <a 
                href={siteData.locations[0].mapUrl} 
                target="_blank" 
                rel="noopener noreferrer"
                class="flex-1 text-center py-2 border-2 border-primary-900 text-primary-900 rounded-lg hover:bg-gray-50 transition-colors"
              >
                Directions
              </a>
            </div>
          </div>
        </div>

        <!-- Garden City Location -->
        <div class="bg-white rounded-xl shadow-lg overflow-hidden">
          <div class="h-64 relative">
            <img 
              src="https://images.unsplash.com/photo-1629909615957-be38d48fbbe4?w=600&h=400&fit=crop" 
              alt="Garden City location"
              class="w-full h-full object-cover"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-black/50 to-transparent"></div>
            <div class="absolute bottom-4 left-4 text-white">
              <h3 class="text-2xl font-semibold">Garden City</h3>
            </div>
          </div>
          <div class="p-6">
            <address class="not-italic text-gray-600 mb-4">
              {siteData.locations[1].address}<br />
              {siteData.locations[1].city} {siteData.locations[1].postalCode}
            </address>
            <div class="flex gap-4">
              <a 
                href={`tel:${siteData.locations[1].phone}`} 
                class="flex-1 text-center py-2 bg-primary-900 text-white rounded-lg hover:bg-primary-800 transition-colors"
              >
                Call
              </a>
              <a 
                href={siteData.locations[1].mapUrl} 
                target="_blank" 
                rel="noopener noreferrer"
                class="flex-1 text-center py-2 border-2 border-primary-900 text-primary-900 rounded-lg hover:bg-gray-50 transition-colors"
              >
                Directions
              </a>
            </div>
          </div>
        </div>
      </div>

      <!-- Emergency Contact -->
      <div class="mt-12 max-w-2xl mx-auto text-center">
        <div class="bg-red-50 border-2 border-red-200 rounded-xl p-6">
          <h3 class="text-xl font-semibold text-red-900 mb-2">Dental Emergency?</h3>
          <p class="text-red-700 mb-4">
            We offer same-day emergency appointments. Call immediately for urgent care.
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a href={`tel:${siteData.locations[0].phone}`} class="inline-flex items-center justify-center px-6 py-3 bg-red-600 text-white rounded-full font-medium hover:bg-red-700 transition-colors">
              <svg class="w-5 h-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
              </svg>
              Call St. Vital
            </a>
            <a href={`tel:${siteData.locations[1].phone}`} class="inline-flex items-center justify-center px-6 py-3 bg-red-600 text-white rounded-full font-medium hover:bg-red-700 transition-colors">
              <svg class="w-5 h-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
              </svg>
              Call Garden City
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <Footer />
</Layout>