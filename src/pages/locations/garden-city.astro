---
import LocationLayout from '../../layouts/LocationLayout.astro';
import GoogleMap from '../../components/GoogleMap.astro';
import { siteData } from '../../data/site-data';

const location = siteData.locations[1]; // Garden City location
---

<LocationLayout 
  title={`${location.name} Location`} 
  location={location}
  locationVideo="/videos/garden-city.mp4"
  videoPoster="/images/garden-city-1.jpg"
>
  
  <!-- Main Content -->
  <div class="prose prose-lg max-w-none">
    <h2 class="text-3xl font-heading font-semibold text-dental-charcoal mb-6">
      Your North Winnipeg Dental Destination
    </h2>
    
    <p class="text-lg text-gray-700 mb-6">
      Located on McPhillips Street in the heart of Garden City, our north Winnipeg location 
      has been a trusted dental care provider for families in Garden City, West Kildonan, 
      Old Kildonan, and the North End for over 15 years. With easy access from Main Street 
      and McPhillips, we're your convenient choice for comprehensive dental care.
    </p>

    <div class="bg-accent-100 border-l-4 border-accent-300 p-6 rounded-r-lg mb-8">
      <h3 class="text-xl font-semibold text-dental-charcoal mb-2">Flexible Hours for Busy Families</h3>
      <p class="text-gray-700 mb-0">
        We know life gets busy. That's why we offer early morning appointments from 7:00 AM 
        and evening hours until 9:00 PM on weekdays, plus Saturday appointments to accommodate 
        your schedule.
      </p>
    </div>

    <h3 class="text-2xl font-heading font-semibold text-dental-charcoal mb-4 mt-8">
      Meet Our Garden City Team
    </h3>
    
    <div class="grid md:grid-cols-2 gap-6 mb-8">
      <!-- Dr. Donald Dziewit -->
      <div class="bg-white rounded-xl shadow-md overflow-hidden">
        <div class="h-48">
          <img 
            src="https://cdn.prod.website-files.com/66fc3785fb8abc41f9227d10/66fc3785fb8abc41f922823f_DITC_2022_Headshot_Dziewit.jpg"
            alt="Dr. Donald Dziewit"
            class="w-full h-full object-cover"
          />
        </div>
        <div class="p-6">
          <h4 class="font-semibold text-lg mb-2">Dr. Donald Dziewit</h4>
          <p class="text-primary-900 text-sm mb-3">Co-Owner & Lead Dentist</p>
          <p class="text-gray-600 text-sm">
            Winnipeg native and University of Manitoba 1994 graduate. In practice since 1998, 
            partner since 2007, bringing innovation and expertise to our Garden City location.
          </p>
        </div>
      </div>
      
      <!-- Dr. Linda Simpson -->
      <div class="bg-white rounded-xl shadow-md overflow-hidden">
        <div class="h-48">
          <img 
            src="https://cdn.prod.website-files.com/66fc3785fb8abc41f9227d10/66fc3785fb8abc41f922823e_DITC_2022_Headshot_Linda-Simpson.jpg"
            alt="Dr. Linda Simpson"
            class="w-full h-full object-cover"
          />
        </div>
        <div class="p-6">
          <h4 class="font-semibold text-lg mb-2">Dr. Linda Simpson</h4>
          <p class="text-primary-900 text-sm mb-3">Co-Owner & General Dentist</p>
          <p class="text-gray-600 text-sm">
            Miami, MB native and University of Manitoba 2002 graduate. Pacific Training Institute 
            graduate, partner since 2007, specializing in family dentistry with compassionate care.
          </p>
        </div>
      </div>
      
      <!-- Dr. Deji Omotayo -->
      <div class="bg-white rounded-xl shadow-md overflow-hidden">
        <div class="h-48">
          <img 
            src="https://cdn.prod.website-files.com/66fc3785fb8abc41f9227d10/66fc3785fb8abc41f92282aa_Dr.%20D.jpg"
            alt="Dr. Deji Omotayo"
            class="w-full h-full object-cover"
          />
        </div>
        <div class="p-6">
          <h4 class="font-semibold text-lg mb-2">Dr. Deji Omotayo</h4>
          <p class="text-primary-900 text-sm mb-3">General Dentist</p>
