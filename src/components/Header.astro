---
import { siteData } from '../data/site-data'
---

<header class="fixed top-0 left-0 right-0 z-50 bg-white/95 backdrop-blur-md border-b border-gray-100">
  <!-- Top Bar with Contact Info -->
  <div class="bg-primary-900 text-white py-2">
    <div class="container mx-auto px-4">
      <div class="flex flex-wrap justify-between items-center text-sm">
        <div class="flex gap-6">
          <a href={`tel:${siteData.locations[0].phone}`} class="hover:text-accent-300 transition-colors">
            <span class="font-medium">St. Vital:</span> {siteData.locations[0].phone}
          </a>
          <a href={`tel:${siteData.locations[1].phone}`} class="hover:text-accent-300 transition-colors hidden sm:inline-flex">
            <span class="font-medium">Garden City:</span> {siteData.locations[1].phone}
          </a>
        </div>
        <div class="flex gap-4 items-center">
          <span class="hidden md:inline">Mon-Thu: 7AM-9PM | Fri: 7AM-2PM | Sat: 8AM-3PM</span>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Main Navigation -->
  <nav class="bg-white">
    <div class="container mx-auto px-4">
      <div class="flex justify-between items-center h-20">
        <!-- Logo -->
        <a href="/" class="flex items-center gap-3">
          <div class="w-12 h-12 bg-gradient-to-br from-primary-900 to-primary-800 rounded-lg flex items-center justify-center">
            <svg class="w-7 h-7 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
            </svg>
          </div>
          <div>
            <div class="text-xl font-heading font-bold text-primary-900">Dental Image</div>
            <div class="text-xs text-primary-800">Therapy Centres</div>
          </div>
        </a>
        
        <!-- Desktop Navigation -->
        <div class="hidden lg:flex items-center gap-8">
          <div class="flex gap-6">
            <div class="relative group">
              <button class="flex items-center gap-1 py-2 text-dental-charcoal hover:text-primary-900 transition-colors font-medium">
                Services
                <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                </svg>
              </button>
              <div class="absolute top-full left-0 mt-2 w-64 bg-white rounded-lg shadow-xl opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 transform group-hover:translate-y-0 translate-y-2 max-h-96 overflow-y-auto">
                <div class="py-2">
                  <a href="/services/emergency-dental" class="block px-4 py-2 hover:bg-gray-50 text-sm">Emergency Dental</a>
                  <a href="/services/general-dentistry" class="block px-4 py-2 hover:bg-gray-50 text-sm">General Dentistry</a>
                  <a href="/services/cosmetic-dentistry" class="block px-4 py-2 hover:bg-gray-50 text-sm">Cosmetic Dentistry</a>
                  <a href="/services/childrens-dentistry" class="block px-4 py-2 hover:bg-gray-50 text-sm">Children's Dentistry</a>
                  <a href="/services/cerec" class="block px-4 py-2 hover:bg-gray-50 text-sm">CEREC Same-Day Crowns</a>
                  <a href="/services/crowns-bridges" class="block px-4 py-2 hover:bg-gray-50 text-sm">Crowns & Bridges</a>
                  <a href="/services/dental-restoration" class="block px-4 py-2 hover:bg-gray-50 text-sm">Dental Restoration</a>
                  <a href="/services/dentures" class="block px-4 py-2 hover:bg-gray-50 text-sm">Dentures</a>
                  <a href="/services/extractions" class="block px-4 py-2 hover:bg-gray-50 text-sm">Extractions</a>
                  <a href="/services/fillings" class="block px-4 py-2 hover:bg-gray-50 text-sm">Fillings</a>
                  <a href="/services/invisalign" class="block px-4 py-2 hover:bg-gray-50 text-sm">Invisalign</a>
                  <a href="/services/iv-sedation" class="block px-4 py-2 hover:bg-gray-50 text-sm">IV Sedation</a>
                  <a href="/services/scaling" class="block px-4 py-2 hover:bg-gray-50 text-sm">Scaling</a>
                  <a href="/services/sealants" class="block px-4 py-2 hover:bg-gray-50 text-sm">Sealants</a>
                  <a href="/services/ultrasonic-scaling" class="block px-4 py-2 hover:bg-gray-50 text-sm">Ultrasonic Scaling</a>
                  <a href="/services/veneers" class="block px-4 py-2 hover:bg-gray-50 text-sm">Veneers</a>
                  <a href="/services/zoom-whitening" class="block px-4 py-2 hover:bg-gray-50 text-sm">Zoom! Whitening</a>
                </div>
              </div>
            </div>
            
            <div class="relative group">
              <button class="flex items-center gap-1 py-2 text-dental-charcoal hover:text-primary-900 transition-colors font-medium">
                Locations
                <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                </svg>
              </button>
              <div class="absolute top-full left-0 mt-2 w-64 bg-white rounded-lg shadow-xl opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 transform group-hover:translate-y-0 translate-y-2">
                <div class="py-2">
                  <a href="/locations/st-vital" class="block px-4 py-2 hover:bg-gray-50 text-sm">St. Vital Centre</a>
                  <a href="/locations/garden-city" class="block px-4 py-2 hover:bg-gray-50 text-sm">Garden City</a>
                </div>
              </div>
            </div>
            
            <a href="/about" class="py-2 text-dental-charcoal hover:text-primary-900 transition-colors font-medium">About Us</a>
            <a href="/contact" class="py-2 text-dental-charcoal hover:text-primary-900 transition-colors font-medium">Contact</a>
          </div>
          
          <!-- CTA Buttons -->
          <div class="flex gap-3">
            <a href={`tel:${siteData.locations[0].phone}`} class="px-4 py-2 border-2 border-primary-900 text-primary-900 rounded-full hover:bg-accent-50 transition-colors font-medium">
              Call Now
            </a>
            <a href="#book-appointment" class="px-6 py-2 bg-primary-900 text-white rounded-full hover:bg-primary-800 transition-colors font-medium">
              Book Appointment
            </a>
          </div>
        </div>
        
        <!-- Mobile Menu Button -->
        <button class="lg:hidden p-2" id="mobile-menu-button">
          <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>
  </nav>
</header>

<script>
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  // Mobile menu implementation would go here
</script>