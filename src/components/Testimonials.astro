---
import { siteData } from '../data/site-data'
---

<section class="py-20 bg-white">
  <div class="container mx-auto px-4">
    <!-- Section Header -->
    <div class="text-center max-w-3xl mx-auto mb-16">
      <div class="inline-flex items-center gap-2 bg-accent-100 text-accent-700 px-4 py-2 rounded-full text-sm font-medium mb-4">
        Patient Reviews
      </div>
      <h2 class="text-4xl md:text-5xl font-heading font-bold text-dental-charcoal mb-4">
        What Our Patients Say
      </h2>
      <p class="text-lg text-gray-600">
        With a {siteData.stats.rating} star rating and thousands of happy smiles, we're proud of the trust our community places in us.
      </p>
    </div>
    
    <!-- Testimonials Grid -->
    <div class="grid md:grid-cols-2 gap-8 max-w-5xl mx-auto">
      {siteData.testimonials.map((testimonial, index) => (
        <div 
          class="testimonial-card opacity-0" 
          style={`animation-delay: ${index * 100}ms`}
        >
          <div class="bg-gray-50 rounded-2xl p-8 relative">
            <!-- Quote Icon -->
            <div class="absolute top-6 right-6 text-primary-200">
              <svg class="w-8 h-8" fill="currentColor" viewBox="0 0 24 24">
                <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h3.983v10h-9.983z" />
              </svg>
            </div>
            
            <!-- Rating Stars -->
            <div class="flex gap-1 mb-4">
              {[...Array(testimonial.rating)].map(() => (
                <svg class="w-5 h-5 text-accent-500" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                </svg>
              ))}
            </div>
            
            <!-- Testimonial Text -->
            <p class="text-gray-700 mb-6 leading-relaxed">
              "{testimonial.text}"
            </p>
            
            <!-- Author Info -->
            <div class="flex items-center justify-between">
              <div>
                <div class="font-semibold text-dental-charcoal">{testimonial.name}</div>
                <div class="text-sm text-gray-500">{testimonial.location} Location</div>
              </div>
              <div class="w-12 h-12 bg-primary-100 rounded-full flex items-center justify-center">
                <span class="text-primary-600 font-bold text-lg">
                  {testimonial.name.charAt(0)}
                </span>
              </div>
            </div>
          </div>
        </div>
      ))}
    </div>
    
  </div>
</section>

<style>
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  .testimonial-card {
    animation: fadeInUp 0.6s ease-out forwards;
  }
</style>