---
export interface Props {
  title: string;
  description: string;
  image?: string;
  canonical?: string;
  type?: string;
}

const { 
  title = 'Dental Image Therapy Centres - Winnipeg Dentist', 
  description = 'Two convenient Winnipeg dental locations offering comprehensive family and cosmetic dentistry. Extended hours, emergency care, and modern technology. Book today!',
  image = '/og-image.jpg',
  canonical,
  type = 'website'
} = Astro.props;

const siteUrl = 'https://www.dentalimage.ca';
const fullImageUrl = image.startsWith('http') ? image : `${siteUrl}${image}`;
const canonicalUrl = canonical || Astro.url.href;
---

<!-- Primary Meta Tags -->
<title>{title}</title>
<meta name="title" content={title} />
<meta name="description" content={description} />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<meta charset="UTF-8" />

<!-- Open Graph / Facebook -->
<meta property="og:type" content={type} />
<meta property="og:url" content={canonicalUrl} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:image" content={fullImageUrl} />
<meta property="og:site_name" content="Dental Image Therapy Centres" />

<!-- Twitter -->
<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:url" content={canonicalUrl} />
<meta property="twitter:title" content={title} />
<meta property="twitter:description" content={description} />
<meta property="twitter:image" content={fullImageUrl} />

<!-- Canonical URL -->
<link rel="canonical" href={canonicalUrl} />

