const colorClasses = {
  primary: {
    accent: 'bg-primary-900',
    iconBg: 'bg-primary-100',
    iconColor: 'text-primary-900',
    hoverBg: 'hover:bg-primary-50',
    border: 'border-gray-200 hover:border-primary-300',
    titleColor: 'text-dental-charcoal',
    hoverTitle: 'group-hover:text-primary-900'
  },
  accent: {
    accent: 'bg-accent-300',
    iconBg: 'bg-accent-100',
    iconColor: 'text-primary-900',
    hoverBg: 'hover:bg-accent-50',
    border: 'border-gray-200 hover:border-accent-300',
    titleColor: 'text-dental-charcoal',
    hoverTitle: 'group-hover:text-primary-900'
  },
  blue: {
    accent: 'bg-primary-800',
    iconBg: 'bg-primary-100',
    iconColor: 'text-primary-800',
    hoverBg: 'hover:bg-primary-50',
    border: 'border-gray-200 hover:border-primary-400',
    titleColor: 'text-dental-charcoal',
    hoverTitle: 'group-hover:text-primary-800'
  }
};

const colors = colorClasses[categoryColor];
const serviceIcon = serviceIcons[service.id] || icon || serviceIcons['fillings'];
---

<a href={service.link} class="group block h-full">
  <div class={`relative h-full bg-white rounded-xl border-2 ${colors.border} shadow-sm transition-all duration-300 group-hover:shadow-xl group-hover:-translate-y-1 overflow-hidden`}>
    <!-- Accent Bar -->
    <div class={`absolute top-0 left-0 right-0 h-1 ${colors.accent}`}></div>
    
    <!-- Content Container -->
    <div class="p-6">
      <!-- Icon -->
      <div class={`inline-flex h-14 w-14 items-center justify-center rounded-lg ${colors.iconBg} mb-4 transition-transform duration-300 group-hover:scale-110`}>
        <div class={colors.iconColor} set:html={serviceIcon} />
      </div>
      
      <!-- Title & Description -->
      <h3 class={`text-lg font-semibold ${colors.titleColor} mb-2 transition-colors duration-300 ${colors.hoverTitle}`}>
        {service.name}
      </h3>
      <p class="text-gray-600 text-sm leading-relaxed mb-4">
        {service.description}
      </p>
      
      <!-- Learn More Link -->
      <div class="flex items-center gap-2 text-sm font-medium text-primary-900 group-hover:text-primary-700 transition-colors">
        <span>Learn More</span>
        <svg class="w-4 h-4 transition-transform duration-300 group-hover:translate-x-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
      </div>
    </div>
    
    <!-- Hover Background Effect -->
    <div class={`absolute inset-0 ${colors.hoverBg} opacity-0 group-hover:opacity-100 transition-opacity duration-300 -z-10`}></div>
  </div>
</a>