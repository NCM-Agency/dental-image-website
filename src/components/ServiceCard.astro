const colorClasses = {
  primary: {
    bg: 'from-primary-600 to-primary-700',
    hover: 'group-hover:from-primary-700 group-hover:to-primary-800',
    iconBg: 'bg-white/20',
    text: 'text-white',
    border: 'border-primary-200',
    shine: 'bg-gradient-to-r from-transparent via-white/20 to-transparent'
  },
  accent: {
    bg: 'from-accent-400 to-accent-500',
    hover: 'group-hover:from-accent-500 group-hover:to-accent-600',
    iconBg: 'bg-white/30',
    text: 'text-primary-900',
    border: 'border-accent-200',
    shine: 'bg-gradient-to-r from-transparent via-white/30 to-transparent'
  },
  blue: {
    bg: 'from-blue-600 to-blue-700',
    hover: 'group-hover:from-blue-700 group-hover:to-blue-800',
    iconBg: 'bg-white/20',
    text: 'text-white',
    border: 'border-blue-200',
    shine: 'bg-gradient-to-r from-transparent via-white/20 to-transparent'
  }
};

const colors = colorClasses[categoryColor];
const serviceIcon = serviceIcons[service.id] || icon || serviceIcons['fillings'];
---

<a href={service.link} class="group block h-full">
  <div class="relative h-full overflow-hidden rounded-2xl border border-gray-100 bg-white shadow-lg transition-all duration-500 group-hover:shadow-2xl group-hover:-translate-y-2 group-hover:border-transparent">
    <!-- Gradient Background Top -->
    <div class={`absolute inset-x-0 top-0 h-32 bg-gradient-to-br ${colors.bg} ${colors.hover} transition-all duration-500`}>
      <!-- Animated Shine Effect -->
      <div class={`absolute inset-0 ${colors.shine} opacity-0 group-hover:opacity-100 -skew-x-12 -translate-x-full group-hover:translate-x-full transition-all duration-700`}></div>
      
      <!-- Pattern Overlay -->
      <div class="absolute inset-0 opacity-10">
        <svg class="w-full h-full" width="100" height="100" xmlns="http://www.w3.org/2000/svg">
          <defs>
            <pattern id={`pattern-${service.id}`} x="0" y="0" width="20" height="20" patternUnits="userSpaceOnUse">
              <circle cx="2" cy="2" r="1" fill="white" />
              <circle cx="12" cy="12" r="1" fill="white" />
            </pattern>
          </defs>
          <rect width="100%" height="100%" fill={`url(#pattern-${service.id})`} />
        </svg>
      </div>
    </div>
    
    <!-- Icon Container -->
    <div class="relative z-10 px-6 pt-6">
      <div class={`inline-flex h-16 w-16 items-center justify-center rounded-xl ${colors.iconBg} backdrop-blur-sm border border-white/30 shadow-lg transform transition-transform duration-500 group-hover:scale-110 group-hover:rotate-3`}>
        <div class={colors.text} set:html={serviceIcon} />
      </div>
    </div>
    
    <!-- Content -->
    <div class="relative px-6 pb-6 pt-4">
      <h3 class="text-xl font-bold text-dental-charcoal mb-2 transition-colors duration-300 group-hover:text-primary-900">
        {service.name}
      </h3>
      <p class="text-gray-600 text-sm mb-4 line-clamp-2">
        {service.description}
      </p>
      
      <!-- Learn More Link -->
      <div class="flex items-center justify-between">
        <span class="text-sm font-semibold text-primary-900 group-hover:text-primary-700 transition-colors">
          Learn More
        </span>
        <div class="flex items-center justify-center w-8 h-8 rounded-full bg-primary-100 group-hover:bg-primary-900 transition-all duration-300">
          <svg class="w-4 h-4 text-primary-900 group-hover:text-white transition-all duration-300 group-hover:translate-x-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
        </div>
      </div>
    </div>
    
    <!-- Bottom Border Animation -->
    <div class="absolute bottom-0 left-0 right-0 h-1 bg-gradient-to-r from-primary-500 via-accent-400 to-primary-500 transform scale-x-0 group-hover:scale-x-100 transition-transform duration-500"></div>
  </div>
</a>