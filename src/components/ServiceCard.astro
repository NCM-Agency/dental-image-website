---
export interface Props {
  service: {
    id: string;
    name: string;
    description: string;
    link: string;
  };
  categoryColor?: 'primary' | 'accent' | 'blue';
  icon?: string;
}

const { service, categoryColor = 'primary', icon } = Astro.props;

