---
import { siteData } from '../data/site-data'
import MapPlaceholder from './MapPlaceholder.astro'
---

<section class="py-20 bg-gradient-to-br from-accent-50 via-white to-gray-50">
  <div class="container mx-auto px-4">
    <!-- Section Header -->
    <div class="text-center max-w-3xl mx-auto mb-16">
      <div class="inline-flex items-center gap-2 bg-accent-100 text-primary-900 px-4 py-2 rounded-full text-sm font-medium mb-4">
        Our Locations
      </div>
      <h2 class="text-4xl md:text-5xl font-heading font-bold text-dental-charcoal mb-4">
        Two Convenient Winnipeg Locations
      </h2>
      <p class="text-lg text-gray-600">
        Modern facilities with extended hours to fit your schedule. Both locations offer the same exceptional care and comprehensive services.
      </p>
    </div>
    
    <!-- Locations Grid -->
    <div class="grid lg:grid-cols-2 gap-8 max-w-6xl mx-auto">
      {siteData.locations.map((location) => (
        <div class="group">
          <div class="bg-white rounded-2xl shadow-lg overflow-hidden transition-all duration-300 group-hover:shadow-2xl group-hover:-translate-y-1">
            <!-- Location Image/Map Preview -->
            <div class="h-48 relative overflow-hidden rounded-t-2xl">
              <!-- Google Maps Embed -->
              <iframe
                class="absolute inset-0 w-full h-full"
                style="border:0"
                loading="lazy"
                allowfullscreen
                referrerpolicy="no-referrer-when-downgrade"
                src={`https://www.google.com/maps/embed/v1/place?key=AIzaSyBFw0Qbyq9zTFTd-tUY6dZWTgaQzuU17R8&q=${encodeURIComponent(location.address + ', ' + location.city + ' ' + location.postalCode)}&zoom=15`}
                title={`Map showing ${location.name} location`}
              >
              </iframe>
              
              <!-- Location Badge -->
              <div class="absolute top-4 left-4 bg-white/95 backdrop-blur-sm px-4 py-2 rounded-full shadow-lg">
                <span class="text-primary-900 font-semibold">{location.name}</span>
              </div>
              
              <!-- Map Icon -->
              <div class="absolute bottom-4 right-4 bg-primary-900 p-3 rounded-full shadow-lg">
                <svg class="w-5 h-5 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
              </div>
            </div>
            
            <!-- Location Details -->
            <div class="p-8">
              <!-- Address -->
              <div class="mb-6">
                <h3 class="text-2xl font-heading font-semibold text-dental-charcoal mb-2">
                  {location.description}
                </h3>
                <address class="not-italic text-gray-600">
                  {location.address}<br />
                  {location.city} {location.postalCode}
                </address>
              </div>
              
              <!-- Contact & Hours -->
              <div class="space-y-4 mb-6">
                <!-- Phone -->
                <div class="flex items-center gap-3">
                  <div class="w-10 h-10 bg-accent-100 rounded-lg flex items-center justify-center">
                    <svg class="w-5 h-5 text-primary-900" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                    </svg>
                  </div>
                  <div>
                    <div class="text-sm text-gray-500">Call to book</div>
                    <a href={`tel:${location.phone}`} class="text-lg font-semibold text-primary-900 hover:text-primary-800">
                      {location.phone}
                    </a>
                  </div>
                </div>
                
                <!-- Hours -->
                <div class="flex items-start gap-3">
                  <div class="w-10 h-10 bg-accent-100 rounded-lg flex items-center justify-center">
                    <svg class="w-5 h-5 text-primary-900" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                  </div>
                  <div class="flex-1">
                    <div class="text-sm text-gray-500 mb-1">Office Hours</div>
                    <div class="text-sm space-y-1">
                      {Object.entries(location.hours).map(([day, time]) => (
                        <div class="flex justify-between">
                          <span class="text-gray-600">{day}:</span>
                          <span class="font-medium text-dental-charcoal">{time}</span>
                        </div>
                      ))}
                    </div>
                  </div>
                </div>
              </div>
              
              <!-- Action Buttons -->
              <div class="flex gap-3">
                <a href={location.mapUrl} target="_blank" rel="noopener noreferrer" class="flex-1 inline-flex items-center justify-center gap-2 px-4 py-2 border-2 border-accent-200 text-primary-900 rounded-lg hover:bg-accent-50 transition-colors font-medium">
                  <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7" />
                  </svg>
                  Get Directions
                </a>
                <a href={`/locations/${location.id}`} class="flex-1 inline-flex items-center justify-center gap-2 px-4 py-2 bg-primary-900 text-white rounded-lg hover:bg-primary-800 transition-colors font-medium">
                  View Details
                  <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                  </svg>
                </a>
              </div>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>